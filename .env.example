# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/acme_legal_triage?schema=public

# Server Configuration
PORT=8999

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
# For development, you can use Groq (free) instead of OpenAI
# OPENAI_BASE_URL=https://api.groq.com/openai/v1
# OPENAI_API_KEY=your_groq_api_key_here
#
# If you have a funded openai account you can use openai api instead
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone (Vector Database for Semantic Search)
# Sign up at https://www.pinecone.io for free tier
# Leave empty to use fallback PostgreSQL full-text search
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=acme-legal-docs

# Email Webhook Configuration
# For SendGrid, Mailgun, or other email service integrations
WEBHOOK_SECRET=your-webhook-secret-here

# Frontend configuration
VITE_API_BASE_URL=http://localhost:8999

# JWT Secret (generate a random string)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# Environment
NODE_ENV=development
